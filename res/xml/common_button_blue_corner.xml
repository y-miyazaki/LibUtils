<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/common_button_blue_text_inverse"><layer-list>

            <!-- ボタン外枠 -->
            <item><shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/common_button_default_background_gradient_inverse1_end" android:startColor="@color/common_button_default_background_gradient_inverse1_start" />

                    <corners android:radius="10.0dp" />

                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape></item>
            <!-- ボタン -->
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/common_button_default_background_gradient_inverse2_end" android:startColor="@color/common_button_default_background_gradient_inverse2_start" />

                    <corners android:radius="10.0dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>
    <item android:state_focused="true" android:color="@color/common_button_blue_text_inverse"><layer-list>

            <!-- ボタン外枠 -->
            <item><shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/common_button_default_background_gradient_inverse1_end" android:startColor="@color/common_button_default_background_gradient_inverse1_start" />

                    <corners android:radius="10.0dp" />

                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape></item>
            <!-- ボタン -->
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/common_button_default_background_gradient_inverse2_end" android:startColor="@color/common_button_default_background_gradient_inverse2_start" />

                    <corners android:radius="10.0dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>

    <!-- 非押下時 -->
    <item android:color="@color/common_button_blue_text"><layer-list>

            <!-- ボタン外枠 -->
            <item><shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/common_button_blue_background_gradient_middle" android:startColor="@color/common_button_blue_background_gradient_start" />

                    <corners android:radius="10.0dp" />

                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape></item>
            <!-- ボタン -->
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/common_button_blue_background_gradient_end" android:startColor="@color/common_button_blue_background_gradient_middle" />

                    <corners android:radius="10.0dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>

</selector>