<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- フリップするアニメーション -->
    <objectAnimator
        android:duration="@integer/flip_animation"
        android:propertyName="rotationY"
        android:valueFrom="0"
        android:startOffset="1"
        android:valueTo="90"/>

    <!-- フリップする途中で、非表示にセットします -->
    <objectAnimator
        android:duration="0"
        android:propertyName="alpha"
        android:startOffset="@integer/flip_animation"
        android:valueFrom="1.0"
        android:valueTo="0.0"/>
</set>
